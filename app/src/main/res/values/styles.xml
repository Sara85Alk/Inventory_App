<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0F3B5F</item>
        <item name="colorPrimaryDark">#0F3B5F</item>
        <item name="colorAccent">#CCCC00</item>
    </style>

    <style name="view_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- activity_editor -->

    <style name="CurrencyStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- activity_view style-->
    <style name="ProductViewTitleTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ProductViewdetailStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActivityViewLinearLayoutsection1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ActivityViewButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- list_item style -->
    <style name="ListItemLinearLayoutsection1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemLinearLayoutsection2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItembuttonstyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
